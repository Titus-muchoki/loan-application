{{#partial "content"}}

    {{#if editLoan}}
        <h1>Edit this Loan!</h1>
        <form action="/loans/{{loan.id}}" method="post">
        <br>
            <label for="description">Edit this loan's description</label>
            <input id="description" name="description" type="text" value="{{loan.description}}">
        <br>
            <label for="categoryId">Update this loan's category:</label>
        <select id="categoryId" name="categoryId">
            {{#each categories}}
                <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
            <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
            <h1>Add a new Loan!</h1>

        <form action="/loans" method="post">
            {{#if categories}}
                <label for="description">Loan Description</label>
            <input id="description" name="description" type="text">
                <label for="categoryId">Categorize this loan as:</label>
            <select id="categoryId" name="categoryId">
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
                <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a category before you add a loan. <a href="/categories/new">Add one here.</a> </h3>

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
    {{/if}}

{{/partial}}

{{> layout.hbs}}