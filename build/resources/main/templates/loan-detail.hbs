{{#partial "content"}}

    <p>Description:{{ loan.description }} </p>
    <p>Category of this loan: {{ category.name }}</p>
    <h5>Created At:</h5>
    <p> {{ loan.createdAt }}</p>
    <h5>Loan status:
        {{#if loan.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
    </h5>

    <p>
        <a href="/loans/{{loan.id}}/edit">Edit this loan</a><br>
        <a href="/categories/{{loan.categoryId}}/loans/{{loan.id}}/delete">DELETE this loan</a>
    </p>

{{/partial}}

{{> layout.hbs}}